{
    "name": "alinauf/laravel-azure-storage",
    "description": "Azure Blob Storage filesystem driver for Laravel using REST API",
    "keywords": ["laravel", "azure", "blob", "storage", "flysystem", "filesystem"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Nauf"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/http": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "league/flysystem": "^3.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^9.0|^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "AliNauf\\AzureStorage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AliNauf\\AzureStorage\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AliNauf\\AzureStorage\\AzureBlobStorageServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint",
        "format-check": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
